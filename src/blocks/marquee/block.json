{
    "apiVersion": 3,
    "name": "orb/marquee",
    "version": "1.0.0",
    "title": "Marquee",
    "icon": "arrow-down-alt2",
    "category": "layout",
    "description": "Displays scrolling content(text, images etc) both horizontally and vertically.",
    "supports": {
		"html": false,
		"align": [
			"wide",
			"full"
		],
        "orbitools": {
            "spacings": {
                "breakpoints": true,
                "gap": true,
                "margin": false,
                "padding": true
            }
        }
    },
    "attributes": {
		"orientation": {
			"type": "string",
			"default": "x"
		},
		"direction": {
			"type": "string",
			"enum": [
				"normal",
				"reverse"
			],
			"default": "normal"
		},
		"hoverState": {
			"type": "string",
			"enum": [
				"paused",
				"running"
			],
			"default": "paused"
		},
		"speed": {
			"type": "string",
			"default": "10s"
		},
		"overlayColor": {
			"type": "string"
		}
	},
    "providesContext": {},
    "usesContext": [],
    "textdomain": "orbitools",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./editor.css",
    "style": "file:./index.css",
    "script": "file:./frontend.js"
}
